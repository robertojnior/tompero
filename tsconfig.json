{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "lib": [
      "ES6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@clients/*": ["app/clients/*"],
      "@contracts/*": ["app/contracts/*"],
      "@interfaces/*": ["app/interfaces/*", "domain/interfaces/*"],
      "@services/*": ["app/services/*"],
      "@constants/*": ["constants/*"],
      "@mocks/*": ["specs/mocks/*"],
      "@infra/*": ["infra/*"],
      "@utils/*": ["utils/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
